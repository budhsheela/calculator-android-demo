<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:background="#111"
    tools:context="com.calculator.demo.calcdemo.MainActivity">

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_0dp"
        android:layout_marginTop="@dimen/activity_margin_10dp"
        android:layout_weight=".16"
        android:gravity="bottom|end"
        android:padding="@dimen/activity_margin_10dp"
        android:textColor="@color/color_E0E0E0"
        android:textColorHint="@color/color_E0E0E0"
        android:hint="0"
        android:maxLength="15"
        android:textSize="@dimen/text_size_25sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_0dp"
        android:layout_weight=".16"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtSeven"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_margin_10dp"
            android:text="7"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:textSize="@dimen/text_size_25sp"
            android:background="@color/color_E0E0E0"
            android:layout_margin="@dimen/activity_margin_1dp"
            android:layout_weight=".25"
            />
        <TextView
            android:id="@+id/txtEight"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_margin_10dp"
            android:text="8"
            android:clickable="true"
            android:focusable="true"
            android:textSize="@dimen/text_size_25sp"
            android:background="@color/color_E0E0E0"
            android:layout_margin="@dimen/activity_margin_1dp"
            android:gravity="center"
            android:layout_weight=".25"
            />
        <TextView
            android:id="@+id/txtNine"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_25sp"
            android:padding="@dimen/activity_margin_10dp"
            android:text="9"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/color_E0E0E0"
            android:layout_margin="@dimen/activity_margin_1dp"
            android:layout_weight=".25"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/txtDivide"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_25sp"
            android:padding="@dimen/activity_margin_10dp"
            android:text="@string/divide"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/color_FFA000"
            android:layout_margin="@dimen/activity_margin_1dp"
            android:gravity="center"
            android:layout_weight=".25"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_0dp"
        android:layout_weight=".16"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtFour"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_margin_10dp"
            android:text="4"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/color_E0E0E0"
            android:layout_margin="@dimen/activity_margin_1dp"
            android:textSize="@dimen/text_size_25sp"
            android:layout_weight=".25"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/txtFive"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_margin_10dp"
            android:gravity="center"
            android:background="@color/color_E0E0E0"
            android:layout_margin="@dimen/activity_margin_1dp"
            android:text="5"
            android:clickable="true"
            android:focusable="true"
            android:textSize="@dimen/text_size_25sp"
            android:layout_weight=".25"
            />
        <TextView
            android:id="@+id/txtSix"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_25sp"
            android:padding="@dimen/activity_margin_10dp"
            android:text="6"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/color_E0E0E0"
            android:layout_margin="@dimen/activity_margin_1dp"
            android:gravity="center"
            android:layout_weight=".25"
            />
        <TextView
            android:id="@+id/txtMultiply"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_25sp"
            android:padding="@dimen/activity_margin_10dp"
            android:text="@string/multiply"
            android:background="@color/color_FFA000"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="@dimen/activity_margin_1dp"
            android:gravity="center"
            android:layout_weight=".25"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_0dp"
        android:layout_weight=".16"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtOne"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_margin_10dp"
            android:text="1"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/color_E0E0E0"
            android:layout_margin="@dimen/activity_margin_1dp"
            android:textSize="@dimen/text_size_25sp"
            android:gravity="center"
            android:layout_weight=".25"
            />
        <TextView
            android:id="@+id/txtTwo"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_margin_10dp"
            android:text="2"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/color_E0E0E0"
            android:layout_margin="@dimen/activity_margin_1dp"
            android:textSize="@dimen/text_size_25sp"
            android:gravity="center"
            android:layout_weight=".25"
            />
        <TextView
            android:id="@+id/txtThree"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_margin_10dp"
            android:text="3"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/color_E0E0E0"
            android:layout_margin="@dimen/activity_margin_1dp"
            android:textSize="@dimen/text_size_25sp"
            android:gravity="center"
            android:layout_weight=".25"
            />
        <TextView
            android:id="@+id/txtMinus"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_margin_10dp"
            android:text="@string/minus"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/color_FFA000"
            android:layout_margin="@dimen/activity_margin_1dp"
            android:textSize="@dimen/text_size_25sp"
            android:layout_weight=".25"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_0dp"
        android:layout_weight=".16"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtZero"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_margin_10dp"
            android:text="0"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/color_E0E0E0"
            android:layout_margin="@dimen/activity_margin_1dp"
            android:textSize="@dimen/text_size_25sp"
            android:layout_weight=".25"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/txtBack"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_margin_10dp"
            android:text="@string/left_arrrow"
            android:textSize="@dimen/text_size_25sp"
            android:gravity="center"
            android:layout_weight=".25"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/color_E0E0E0"
            android:layout_margin="@dimen/activity_margin_1dp"
            />
        <TextView
            android:id="@+id/txtDot"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_margin_10dp"
            android:text="."
            android:clickable="true"
            android:focusable="true"
            android:textSize="@dimen/text_size_25sp"
            android:gravity="center"
            android:layout_weight=".25"
            android:background="@color/color_E0E0E0"
            android:layout_margin="@dimen/activity_margin_1dp"
            />
        <TextView
            android:id="@+id/txtPlus"
            android:layout_width="@dimen/activity_margin_0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_margin_10dp"
            android:text="@string/plus"
            android:textSize="@dimen/text_size_25sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight=".25"
            android:background="@color/color_FFA000"
            android:layout_margin="@dimen/activity_margin_1dp"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/txtEqual"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_0dp"
        android:layout_weight=".16"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:textSize="@dimen/text_size_25sp"
        android:padding="@dimen/activity_margin_10dp"
        android:layout_marginBottom="@dimen/activity_margin_5dp"
        android:background="@color/color_FFA000"
        android:layout_margin="@dimen/activity_margin_1dp"
        android:textColor="@color/white"
        android:text="@string/equal" />
</LinearLayout>
